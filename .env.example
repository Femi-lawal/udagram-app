# Udagram Environment Variables
# Copy this file to .env and customize values for your environment

# JWT Configuration
JWT_SECRET=your-super-secret-key-minimum-32-characters
JWT_ISSUER=udagram

# PostgreSQL Configuration
POSTGRES_USER=udagram
POSTGRES_PASSWORD=your-secure-database-password
POSTGRES_DB=udagram

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:80,http://localhost:4200

# AWS Configuration (for S3 media storage)
AWS_REGION=us-east-1
AWS_BUCKET=udagram-media
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Redis Configuration (optional - uses defaults)
# REDIS_HOST=redis
# REDIS_PORT=6379

# Kafka Configuration (optional - uses defaults)
# KAFKA_BROKERS=kafka:9092

# Telemetry (optional)
# TELEMETRY_ENABLED=true
# OTEL_EXPORTER_OTLP_ENDPOINT=jaeger:4317
